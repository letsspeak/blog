{
    "name": "lsklab-blog",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "dev": "vite",
        "build:articles": "NODE_OPTIONS='--loader ts-node/esm' ts-node ./build-articles.ts",
